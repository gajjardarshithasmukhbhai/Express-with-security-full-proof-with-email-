<div class="container">
<div class="row">
  each val in data
    <div class="col-md-4">
      <br>
      <div class="card-deck">
        <div class="card card-cascade narrower">
          <div class="view view-cascade overlay">
            <img  class="card-img-top card-img" src=#{val.Image} alt="Card image cap">
            <a>
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>
          <div class="card-body card-body-cascade">
            <h5 class="pink-text pb-2 pt-1"><i class="fas fa-car"></i>&nbsp;Products</h5>
            <!-- Title -->
            <h4 class="font-weight-bold card-title">#{val.title}</h4>
            <!-- Text -->
            <p class="card-text" style="font-size: 18px;">#{val.description}</p>
            <p class="card-text" style="font-size: 18px;">#{val.Price}&nbsp;<b>$</b></p>
            <!-- Button -->
            
            <a href='/Product/#{val._id}' class="btn btn-unique"><i class="fas fa-shopping-cart"></i>Add Cart</a>
            <button class="btn btn-primary"><i class="fas fa-magic mr-1"></i>Deatils</button>

          </div>

        </div>
