<center>
<div class="col-md-5">
<div class="card">
  <!-- Card content -->
  <div class="card-body w-100">
      <form action="/Add_product" method="post">

        <h3 class="modal-title w-100 dark-grey-text font-weight-bold my-3" id="myModalLabel"><strong>Sign in</strong></h3>
        <div class="md-form mt-0">
          <input type="email" id="materialRegisterFormEmail" class="form-control" name="email" required>
          <label for="materialRegisterFormEmail"><b>E-mail</b></label>
        </div>
        <div class="md-form">
          <input type="password" id="materialRegisterFormPassword" class="form-control" aria-describedby="materialRegisterFormPasswordHelpBlock" name="password" required>
          <label for="materialRegisterFormPassword"><b>Password</b></label>
          <small id="materialRegisterFormPasswordHelpBlock" class="form-text text-muted mb-4">
              At least 8 characters and 1 digit
          </small>
        </div>
         <div class="d-flex justify-content-around">
            <div>
              <!-- Remember me -->
            </div>
             <p class="font-small blue-text d-flex justify-content-end">Forgot Password?
             </p>
        </div>
        <button type="submit" class="btn btn-outline-info waves-effect w-100">Login</button>
        //- never use button tag in exam because of exam
        //- prospective input tag is use
        <div class="row my-3 d-flex justify-content-center">
        <button type="button" class="btn btn-white btn-rounded mr-md-3 z-depth-1a"><i class="fab fa-facebook-f blue-text text-center"></i></button>
        <button type="button" class="btn btn-white btn-rounded mr-md-3 z-depth-1a"><i class="fab fa-twitter blue-text"></i></button>
        <!--Google +-->
        <button type="button" class="btn btn-white btn-rounded z-depth-1a"><i class="fab fa-google-plus-g blue-text"></i></button>
      </div>
      </form>
  </div>

